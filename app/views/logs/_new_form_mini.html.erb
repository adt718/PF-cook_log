<%= form_for(@log) do |f| %>
      <%= f.hidden_field :dish_id, :value => @dish.id %>
      <%= hidden_field_tag :list_id, @list.id if @list.present? %>
  <p class="add-cooklog"><i class="fas fa-utensils"></i> クックログを追加する</p>
  <div class="row">
    <div class="col-md-9">
      <div class="field">
        <%= f.text_area :content, placeholder: "クックメモ", :size => "30*30" %>
      </div>
    </div>
    <div class="col-md-3">
      <% if @list.present? %>
        <%= f.submit "追加", class: "btn-square-shadow",
                                      data: { confirm: "クックログを追加し、リストから削除しますか？" } %>
      <% else %>
        <%= f.submit "追加", class: "btn-square-shadow" %>
      <% end %>
    </div>
  </div>
  <% end %>
