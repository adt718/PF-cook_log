        </div>
        <div class = 'form-group'>
          <%= f.label :name %>　<span class="input-need">※必須</span>
          <%= f.text_field :name, class: 'form-control', id: 'user_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :email %>　<span class="input-need">※必須</span>
          <%= f.text_field :email, class: 'form-control', id: 'user_email' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :introduction %>　<span class="input-unneed">※任意</span>
          <%= f.text_area :introduction, size: "60x4", class: 'form-control', id: 'user_introduction' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :sex %>　<span class="input-unneed">※任意</span>
          <%= f.text_field :sex, class: 'form-control', id: 'user_sex' %>
        </div>
        <%= f.submit "更新する", class: "btn-square-shadow" %>
        <% end %>
